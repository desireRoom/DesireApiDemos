<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/play_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play" />

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel" />

        <Button
            android:id="@+id/end_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End" />

        <CheckBox
            android:id="@+id/end_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End Immediately" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sequencer Events :    " />

        <TextView
            android:id="@+id/start_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start    " />

        <TextView
            android:id="@+id/repeat_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Repeat    " />

        <TextView
            android:id="@+id/cancel_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel    " />

        <TextView
            android:id="@+id/end_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End    " />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Animator Events :    " />

        <TextView
            android:id="@+id/start_anim_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start    " />

        <TextView
            android:id="@+id/repeat_anim_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Repeat    " />

        <TextView
            android:id="@+id/cancel_anim_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel    " />

        <TextView
            android:id="@+id/end_anim_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End    " />
    </LinearLayout>

</LinearLayout>